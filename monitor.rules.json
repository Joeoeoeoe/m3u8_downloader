{
    "chains": {
        "monitor_first_pass": [
            {
                "type": "play_media",
                "args": {
                    "target": "page"
                }
            },
            {
                "type": "wait",
                "args": {
                    "ms": 1400
                }
            },
            {
                "type": "click",
                "args": {
                    "selectors": [
                        "$player"
                    ],
                    "repeat": 1,
                    "wait_ms": 1600
                }
            }
        ],
        "monitor_retry_pass": [
            {
                "type": "wait_for_selector",
                "args": {
                    "selectors": [
                        "$player"
                    ],
                    "state": "visible",
                    "match": "any",
                    "target": "all",
                    "timeout_ms": 4000,
                    "poll_ms": 150
                }
            },
            {
                "type": "click",
                "args": {
                    "selectors": [
                        "$player"
                    ],
                    "target": "all",
                    "repeat": 2,
                    "wait_ms": 1200
                }
            },
            {
                "type": "scroll",
                "args": {
                    "deltas": [
                        240,
                        800,
                        1500
                    ],
                    "wait_after_scroll_ms": 900
                }
            },
            {
                "type": "mouse_click",
                "args": {
                    "position": {
                        "x": "center",
                        "y": "center"
                    },
                    "button": "left"
                }
            },
            {
                "type": "press",
                "args": {
                    "key": "Space"
                }
            },
            {
                "type": "wait",
                "args": {
                    "ms": 1200
                }
            }
        ]
    },
    "global": {
        "actions": [
            {
                "type": "chain",
                "when": "=1",
                "args": {
                    "name": "monitor_first_pass"
                }
            },
            {
                "type": "chain",
                "when": ">=2",
                "args": {
                    "name": "monitor_retry_pass"
                }
            }
        ]
    },
    "sites": []
}
